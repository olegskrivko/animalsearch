<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
  <div class="col-md-12 mb-3">
    <h1 class="text-center"><%= category.name %></h1>
    <h3 class="text-center"><%= category.description %></h3>
  </div>
  <section class="col-md-6 col-sm-12">
    <% if (category.serviceProviders.length > 0) {%> <% for (let service of
    category.serviceProviders) { %>

    <div class="card mb-3 small">
      <div class="card-header d-flex justify-content-between">
        <%= service.name %>
        <a href="#"><i class="bi bi-geo-alt-fill"></i></a>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush show-pet-list">
          <li class="list-group-item">
            <b><i class="bi bi-telephone-fill"></i> Phone: </b>
            <a href="tel:<%=service.phone %>"><%= service.phone %></a>
          </li>
          <li class="list-group-item">
            <b><i class="bi bi-envelope-fill"></i> Email:</b>
            <a
              href="mailto:<%= service.email %>?subject=Hello%20World&body=I%20hope%20you%20are%20doing%20well."
              ><%= service.email %></a
            >
          </li>

          <li class="list-group-item">
            <b><i class="bi bi-globe2"></i> Website:</b>
            <a href="<%= service.website %>" target="_blank"
              ><%= service.website %></a
            >
          </li>

          <li class="list-group-item">
            <b><i class="bi bi-facebook"></i> Facebook: </b>
            <a href=""><%= service.socialMedia[0] %></a>
          </li>

          <li class="list-group-item">
            <b><i class="bi bi-instagram"></i> Instagram: </b>
            <a href=""><%= service.socialMedia[1] %></a>
          </li>
        </ul>
        <p class="card-text"><%= service.description %></p>
      </div>
    </div>

    <% } %> <% } else {%>
    <p>Services are not available</p>

    <% } %>
  </section>
  <section class="col-md-6 col-sm-12">
    <div id="map" class="map col-sm-12" style="height: 500px"></div>
  </section>
</div>
<script>
  const TOMTOMTOKEN = "<%-process.env.TOMTOM_API_KEY%>";
</script>

<script src="/javascripts/servicePageMap.js"></script>
