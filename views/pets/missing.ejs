<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center mb-4">Report Missing Pet</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/pets"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
      id="new-pet-form"
    >
      <div class="d-flex justify-content-between">
        <div class="mb-2 w-100 me-3">
          <label class="form-label" for="species">Species*</label>
          <select
            class="form-select"
            id="species"
            aria-label="Select species"
            form="new-pet-form"
            name="pet[species]"
            autofocus
          >
            <!-- <option hidden disabled selected value>-- Select an option --</option> -->
            <option value="Dog">Dog</option>
            <option value="Cat">Cat</option>
          </select>
          <!-- <div class="valid-feedback">Looks good!</div> -->
        </div>

        <div class="mb-2 w-100">
          <label class="form-label" for="breed">Breed</label>
          <select
            class="form-select"
            id="breed"
            aria-label="Select breed"
            form="new-pet-form"
            name="pet[breed]"
            disabled
          >
            <!-- <option hidden disabled selected value>-- Select an option --</option> -->
            <option value="">--</option>
            <!-- <option value="cat">Cat</option> -->
          </select>
          <!-- <input
            class="form-control"
            type="text"
            id="breed"
            name="pet[breed]"
          /> -->
          <!-- <div class="valid-feedback">Looks good!</div> -->
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <div class="mb-2 w-100 me-3">
          <label class="form-label" for="title">Pet’s name</label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="pet[title]"
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-2 w-100">
          <label class="form-label" for="identifier">Identifier</label>
          <input
            class="form-control"
            type="number"
            aria-label="identifier"
            aria-describedby="identifier-label"
            name="pet[identifier]"
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <!-- <div class="mb-3">
        <div id="map" class="map mb-5" style="width: 100%; height: 300px"></div>
      </div> -->

      <div class="mb-2">
        <label class="form-label" for="location">Location</label>
        <input
          placeholder="City, Street"
          class="form-control"
          type="text"
          id="location"
          name="pet[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div
